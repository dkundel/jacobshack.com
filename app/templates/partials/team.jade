mixin githubButton(profile)
  a.btn.btn-round-social.btn-github(href="https://github.com/"+profile, target="_blank")
    i.fa.fa-lg.fa-github

mixin twitterButton(profile)
  a.btn.btn-round-social.btn-twitter(href="https://twitter.com/"+profile, target="_blank")
    i.fa.fa-lg.fa-twitter
    
mixin emailButton(email)
  a.btn.btn-round-social.btn-mail(href="mailto:"+email, target="_blank")
    i.fa.fa-lg.fa-inbox

mixin teamEntry(name, role, image)
  .team-member-wrapper.col-lg-3
    .team-member
      .team-member-header
        img.img-responsive.header-blur(src=image)
      img.img-circle.team-member-img(src=image)
      .team-member-details
        p.team-member-name= name
        p.team-member-role= role
        if block
          .team-member-contact
            block
     
    
